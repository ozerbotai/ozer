<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ozer</title>
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="../img/favicon-light.svg" id="favicon">
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined"
      rel="stylesheet"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Exo+2:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
    <link href="../styles/styles.css" rel="stylesheet" />
    <script src="https://unpkg.com/i18next@latest/i18next.min.js"></script>
    <script src="../js/i18n-config.js"></script>
  </head>
  <body>
    <%- include('partials/header') -%>
    <input type="text" id="email" placeholder="" disabled style="display: none;" value=<%= user.emails[0].value %>>
    <input type="text" id="target" placeholder="" disabled style="display: none;" value=<%= target %>>
    <main class="main-container">
      <%- include('partials/config/config-loading') -%>
      <section id="section-info-main" style="display: none;" class="container padding-x-sm-none mt-4">
        <div class="row install-section">          
          <div class="col-12 col-lg-4 install-section__item">
            <%- include('partials/config/config-user-name') -%>
            <%- include('partials/config/config-vertical-menu') -%>
          </div>
          <%- include('partials/config/config-general-settings') -%>
          <%- include('partials/config/config-contact-settings') -%>
          <%- include('partials/config/config-group-settings') -%>
          <%- include('partials/config/config-summarization-settings') -%>
        </div>
        <%- include('partials/config/contacts/config-contact-toasts') -%>
        <%- include('partials/config/groups/config-group-toasts') -%>
      </section>
    </main>

    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
      integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
      crossorigin="anonymous"
    ></script>
    <!-- Favicon -->
    <script src="../js/favicon.js"></script>
    <!-- Language dropdown -->
    <script src="../js/language.js"></script>
    <!-- Toast script -->
    <script src="../js/toast.js"></script>
    <script src="../js/cookies.js"></script>
    <script src="../js/config.js"></script>
    <script src="../js/header.js"></script>
    <script src="../js/script-translations.js"></script>
    <script src="../js/cookies.js"></script>
    <script src="../js/script-data-fetch.js"></script>
    <script src="../js/script-aux-functions.js"></script>
    <script src="../js/user-event-constants-frontend.js"></script>
    
    <script src="../js/form-add-contact.js"></script>
    <script src="../js/form-edit-contact.js"></script>
    <script src="../js/form-add-group.js"></script>
    <script src="../js/form-edit-group.js"></script>
    <!-- Tooltip -->
    <script src="../js/tooltip.js"></script>
  </body>
</html>
