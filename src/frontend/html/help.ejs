<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ozer</title>
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="../../img/favicon-light.svg" id="favicon">
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined"
      rel="stylesheet"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Exo+2:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
    <link href="../styles/styles.css" rel="stylesheet" />
    <script src="https://unpkg.com/i18next@latest/i18next.min.js"></script>
    <script src="../js/i18n-config.js"></script>
  </head>
  <body>
    <%- include('partials/header') -%>
    <input type="text" id="email" placeholder="" disabled style="display: none;" value=<%= user.emails[0].value %>>
    <main class="main-container">
        <section class="container my-4 mt-3 mt-lg-4 sections-custom-width">
          <a
            id="linkGotoConfig"
            href="#"
            class="d-flex align-items-center gap-1 text-decoration-none mb-2"
          >
            <span class="material-symbols-outlined" aria-hidden="true">
              arrow_back
            </span>
            <span id="help-link-backToConfig"></span>
          </a>
          <h1 class="mb-0 h4" id="help-title-help"></h1>
        </section>
  
        <section class="container sections-custom-width">
          <div class="row install-section">
            <div class="col-12 install-section__item">
              <div class="sections-box br-lg-24 mb-3">
                <h2 class="mb-0 h5" id="help-title-tips"></h2>
                <hr class="sections-box__divisor custom-margin" />
                <%- include('partials/config/config-paused-transcriptions-alert') -%>
                <p class="h6 mb-2" id="help-paragraph-generalConfig"></p>
                <p class="text-secondary mb-0" id="help-paragraph-transcribeAudioMessages">
                </p>
                <hr class="sections-box__divisor" />
                <p class="h6 mb-2" id="help-paragraph-configContactsGroups"></p>
                <p class="text-secondary mb-2" id="help-paragraph-changeTranscriptionsSettings">
                </p>
                <p class="mb-0">
                  <a
                    id="linkGotoConfigContacts"
                    href="#"
                    class="mb-2 d-flex align-items-center gap-1 text-decoration-none"
                  >
                    <span class="text-decoration-underline" id="help-span-configContacts"
                      ></span
                    >
                    <span
                      class="material-symbols-outlined size-20"
                      aria-hidden="true"
                    >
                      arrow_forward
                    </span>
                  </a>
                </p>
                <p class="mb-0">
                  <a
                    id="linkGotoConfigGroups"
                    href="#"
                    class="d-flex align-items-center gap-1 text-decoration-none"
                  >
                    <span class="text-decoration-underline" id="help-span-configGroups"
                      ></span
                    >
                    <span
                      class="material-symbols-outlined size-20"
                      aria-hidden="true"
                    >
                      arrow_forward
                    </span>
                  </a>
                </p>
              </div>
            </div>
            <div class="col-12 install-section__item">
              <!-- Start: Block for when transcriptions are paused  -->
              <div class="sections-box br-lg-24 mb-3 d-none" id="pausedTranscripText">
                <h2 class="mb-0 h5" id="help-title-activateTranscriptions"></h2>
                <hr class="sections-box__divisor custom-margin" />
                <p class="mb-3" id="help-paragraph-transcriptionsPaused">
                </p>
                <button class="btn btn-lg btn-outline-primary" id="help-button-activateTranscriptions">
                </button>
              </div>
              <!-- End: Block for when transcriptions are paused  -->
  
              <!-- Start: Block for when transcriptions are active  -->
              <div class="sections-box br-lg-24 mb-3 d-none" id="activeTranscripText">
                <h2 class="mb-0 h5" id="help-title-pauseTranscriptions"></h2>
                <hr class="sections-box__divisor custom-margin" />
                <p class="mb-3" id="help-paragraph-stopReceivingTranscriptions">
                </p>
                <!-- Button trigger modal -->
                <button
                  type="button"
                  class="btn btn-lg btn-outline-danger"
                  data-bs-toggle="modal"
                  data-bs-target="#pauseTranscriptsModal"
                  id="help-button-pauseTranscriptions"
                >
                </button>
                <!-- Modal -->
                <div
                  class="modal fade"
                  id="pauseTranscriptsModal"
                  tabindex="-1"
                  aria-labelledby="pauseTranscriptsModalLabel"
                  aria-hidden="true"
                >
                  <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                      <div class="modal-body">
                        <p class="h5 mb-2" id="help-paragraph-pauseAllTranscriptions">
                        </p>
                        <p class="mb-0" id="help-paragraph-confirmPauseTranscriptions">
                        </p>
                      </div>
                      <div class="modal-footer border-none">
                        <button
                          type="button"
                          class="btn btn-lg btn-outline-primary outline-none me-1"
                          data-bs-dismiss="modal"
                          id="help-button-cancelPauseTranscriptions"
                        >
                        </button>
                        <button type="button" class="btn btn-lg btn-danger" data-bs-dismiss="modal" id="help-button-confirmPauseTranscriptions">
                        </button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <!-- End: Block for when transcriptions are active  -->
            </div>
              <div class="col-12 install-section__item">
                <div class="sections-box br-lg-24 mb-3" id="reconnectText">
                    <h2 class="mb-0 h5" id="help-title-reconnect"></h2>
                    <hr class="sections-box__divisor custom-margin" />
                    <p class="mb-3" id="help-paragraph-notReceivingTranscriptions"></p>
                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-lg btn-outline-primary" data-bs-toggle="modal" data-bs-target="#reconnectModal" id="help-button-reconnect"></button>
                    <!-- Modal -->
                    <div class="modal fade" id="reconnectModal" tabindex="-1" aria-labelledby="pauseTranscriptsModalLabel" aria-hidden="true">
                      <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                          <div class="modal-body">
                            <p class="h5 mb-2" id="help-paragraph-reconnectOzer">
                            </p>
                            <p class="mb-0" id="help-paragraph-confirmReconnectOzer">
                            </p>
                          </div>
                          <div class="modal-footer border-none">
                            <button
                              type="button"
                              class="btn btn-lg btn-outline-primary outline-none me-1"
                              data-bs-dismiss="modal"
                              id="help-button-cancelReconnect"
                            >
                            </button>
                            <button type="button" class="btn btn-lg btn-danger" data-bs-dismiss="modal" id="help-button-confirmReconnect">
                            </button>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              <!-- End: Block for when transcriptions are active  -->
            </div>

            <div class="col-12 install-section__item">
              <div class="sections-box br-lg-24 mb-3">
                <h2 class="mb-0 h5" id="help-title-support"></h2>
                <hr class="sections-box__divisor custom-margin" />
                <p class="mb-3" id="help-paragraph-contactSupport">
                </p>
              </div>
            </div>
          </div>
        </section>
      </main>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
      integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
      crossorigin="anonymous"
    ></script>
    <!-- Favicon -->
    <script src="../js/favicon.js"></script>
    <!-- Language dropdown -->
    <script src="../js/toast.js"></script>
    <script src="../js/language.js"></script>
    <script src="../js/help.js"></script>
    <script src="../js/header.js"></script>
    <script src="../js/script-translations.js"></script>
    <script src="../js/cookies.js"></script>
    <script src="../js/script-data-fetch.js"></script>
    <script src="../js/script-aux-functions.js"></script>
    <script src="../js/user-event-constants-frontend.js"></script>
    <!-- Tooltip -->
    <script src="../js/tooltip.js"></script>
  </body>
</html>
